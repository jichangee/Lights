<article class="post" style="margin-top: 0;">
    <header style="text-align: left;">
        <% if (item.title){ %>
            <h1 style="margin-bottom: 20px;"><%= item.title %></h1>
        <% } %>
        <h2 class="headline" style="margin-bottom: 0;"><%= item.date.format('YYYY-MM-DD HH:mm') %>
        <% if (item.categories && item.categories.length){ %>
            <%
            var cats = [];
            item.categories.forEach(function(cat){
                cats.push('<a href="' + config.root + cat.path + '#' + cat.name + '">' + cat.name + '</a>');
            });
            %>
            <%- cats.join(', ') %>
        <% } %>
        </h2>
    </header>
</article>
<section id="post-body"><%- item.content %></section>
